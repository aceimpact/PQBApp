%nav.navbar.fixed-top.navbar-expand-lg.navbar-light.white.scrolling-navbar
  .container
    / Brand
    %a.navbar-brand.waves-effect{:href => ""}
      %strong.blue-text PQBApp
    / Collapse
    %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
      %span.navbar-toggler-icon
    / Links
    #navbarSupportedContent.collapse.navbar-collapse
      / Left
      %ul.navbar-nav.mr-auto
        %li.nav-item.active.dropdown
          %a.nav-link.waves-effect{:href => "#"}
            Home
        - if user_signed_in?
          %li.nav-item.dropdown
            %a.nav-link.waves-effect.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"} ユーザーページ
            %ul.dropdown-menu
              %li.dropdown= link_to "マイページ", user_path(current_user)
              %li.dropdown= link_to "ユーザー情報を変更する", edit_user_registration_path
              %li.dropdown= link_to "ログアウト", destroy_user_session_path, method: :delete
          %li.nav-item.dropdown
            %a.nav-link.waves-effect.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"} 質問
            %ul.dropdown-menu
              %li.dropdown= link_to "質問する"
              %li.dropdown= link_to "質問に回答する"
              %li.dropdown= link_to "質問一覧"
          %li.nav-item.dropdown
            %a.nav-link.waves-effect.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"} お気に入り
            %ul.dropdown-menu
              %li.dropdown= link_to "お気に入りした質問"
        - else
          / header-Wellcome
          %li.nav-item.dropdown
            %a.nav-link.waves-effect.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"} Wellcome
            %ul.dropdown-menu
              %li.dropdown= link_to 'Sign Up'
              %li.dropdown= link_to 'login'
