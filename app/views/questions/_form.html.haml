= form_for @question do |f|
  = f.label :subject
  = f.select :subject, Question.subjects.keys.map {|k| [I18n.t("enums.question.subject.#{k}"), k]}
  = f.label :content
  = f.text_area :content
  = f.fields_for :images do |image|
    = render 'image_fields', f: image
  .links
    = link_to_add_association '画像追加', f, :images
  = f.submit "投稿する"
