- provide(:title, "マイページ")
.container
  .question-detail
    %h3 自分のした質問一覧
    %ul.list-group.questionList
      - @question.each do |q|
        -if q.subject == "japanese"
          %li.list-group-item.badge.badge-warning.questionList__subject= q.subject_i18n
        -if q.subject == "math"
          %li.list-group-item.badge.badge-primary.questionList__subject= q.subject_i18n
        -if q.subject == "society"
          %li.list-group-item.badge.badge-info.questionList__subject= q.subject_i18n
        -if q.subject == "science"
          %li.list-group-item.badge.badge-success.questionList__subject= q.subject_i18n
        -if q.subject == "english"
          %li.list-group-item.badge.badge-danger.questionList__subject= q.subject_i18n
        -if q.images.present?
          %li.list-group-item
            - q.images.each do |image|
              %img= image_tag image.file.url, class: "card-img-top"
        %li.list-group-item= q.content
        - if current_user.id == q.user_id
          %li.list-group-item
            = link_to "編集する", edit_question_path(q), class: "btn btn-primary btn-sm"
            = link_to "削除する", question_path(q), method: :delete, class: "btn btn-danger btn-sm",  data: { confirm: '本当に削除してよろしいですか？' }
